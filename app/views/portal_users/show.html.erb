<div class="content" style="padding-top: 15px">
  <!-- Primary work area div -->
  <div class="panel-group" id="accordion">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
          <strong>Messages</strong></a>
        </h4>
      </div>
      <div id="collapse1" class="panel-collapse collapse in">
        <div class="panel-body">
          <%= render 'portal_users/messages/messages' %>
        </div>
      </div>
    </div>

    <% if @portal_user.has_routes_or_blue_chip('RTE') %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">
            <strong>Routes</strong></a>
          </h4>
        </div>
        <div id="collapse2" class="panel-collapse collapse ">
          <div class="panel-body">
            <%= render 'web_portal_routes/web_portal_routes' %>
          </div>
        </div>
      </div>
    <%end%>
    <% if @portal_user.has_routes_or_blue_chip('BCP') %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">
            <strong>Hotel</strong></a>
          </h4>
        </div>
        <div id="collapse3" class="panel-collapse collapse">
          <div class="panel-body">This will contain Blue Chip routes when we have that funcionality workin. Until then You get this text</div>
        </div>
      </div>
    <%end%>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
      $('[data-toggle="popover"]').popover({
          placement : 'top',
          trigger : 'hover'
      });
  });
</script>
