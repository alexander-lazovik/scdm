<div class="content">
  <h2 class="content_header">Daily Route Delivery List</h2>
  <%= render 'web_portal_route_subtitle' %>
  <br>

  <div class="route_form">
    <%= form_tag(edit_rdl_draw_and_return_path(id: @web_portal_route.to_param),
      {method: :get, class: "form form-horizontal"}) do %>
      <%= text_field_tag "range", format_date(@web_portal_route.distribution_date),
        class: "datepicker route_date" %>
      <%= button_tag "Manage Returns and Draw", class: "btn btn-primary", name: nil %>
    <% end %>

    <div class="list-group previous_days">
      <% 1.day.ago(@web_portal_route.distribution_date).downto(6.days.ago(@web_portal_route.distribution_date)) do |date| %>
        <%= link_to format_date(date),
          edit_rdl_draw_and_return_path(id: @web_portal_route.to_param, range: date_to_param(date)),
          class: "list-group-item list-group-item-action route_date" %>
      <% end %>
    </div>
  </div>

  <div class="route_warning">
    <h5>Please Note: Data entered after 3:00PM EST may not impact the current distribution date
      <%= "#{get_next_edition_date}." %></h5>
  </div>
</div>

